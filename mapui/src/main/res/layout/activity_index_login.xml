<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/color_blue">
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_250"
        >
        <android.support.v4.view.ViewPager
	        android:id="@+id/index_viewpager"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	       />
    	<TextView 
    	    android:id="@+id/pager_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="@dimen/dp_20"
	        android:layout_marginBottom="@dimen/dp_20"
	        android:textSize="@dimen/sp_20"
	        android:textColor="@color/color_white"
	        />
    </RelativeLayout>
	
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_top_name"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/color_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        />
    <EditText 
        android:id="@+id/index_edittext_phone"
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="phone"
        android:hint="@string/login_phone_hint"
        android:textSize="@dimen/sp_16"
        android:textColorHint="@color/color_white"
        android:textColor="@color/color_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:background="@null"
        />
    <TextView 
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_ddd"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout 
        android:layout_width="@dimen/dp_320"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_horizontal"
        >
    	<LinearLayout 
    	    android:layout_width="@dimen/dp_160"
    	    android:layout_height="wrap_content"
    	    android:orientation="vertical"
    	    >
    	    <EditText 
		        android:id="@+id/index_edittext_code"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:inputType="number"
		        android:hint="login_code_hint"
		        android:textSize="@dimen/sp_16"
		        android:textColorHint="@color/color_white"
		        android:textColor="@color/color_white"
		        android:layout_marginTop="@dimen/dp_20"
		        android:paddingTop="@dimen/dp_5"
		        android:paddingBottom="@dimen/dp_5"
		        android:paddingLeft="@dimen/dp_10"
		        android:background="@null"
		        />
		    <TextView 
		        android:layout_width="@dimen/dp_160"
		        android:layout_height="@dimen/dp_1"
		        android:background="@color/color_ddd"
		        android:layout_gravity="center_horizontal"
		        />
    	</LinearLayout>
        <Button 
	        android:id="@+id/index_sendmessage"
	        android:layout_width="@dimen/dp_140"
	        android:layout_height="wrap_content"
	        android:text="@string/login_code_button"
	        android:textSize="@dimen/sp_16"
	        android:textColor="@color/color_blue"
	        android:gravity="center"
	        android:layout_gravity="bottom"
	        android:layout_marginLeft="@dimen/dp_20"
	        />
    </LinearLayout>
    <Button 
        android:id="@+id/index_button"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_45"
        android:text="@string/login_button"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/color_blue"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/button_click_gray"
        />
</LinearLayout>
